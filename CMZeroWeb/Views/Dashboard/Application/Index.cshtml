        <label class="control-label" for="rememberMeCheckBox">@Model.GetLabel("RememberMeText")</label>
        <div class="controls">
            <input type="checkbox" id="rememberMeCheckBox" name="rememberMeCheckBox" value="true">
                @Model.GetLabel("RememberMeDescription")
            
        </div>
    </div>*@

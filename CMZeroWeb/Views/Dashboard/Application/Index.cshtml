@model CMZero.Web.Models.ViewModels.ApplicationViewModel

@{
    ViewBag.Title = Model.GetLabel("PageTitle");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.GetLabel("MainH1")</h1>

@Model.Application.Name



@using (Html.BeginForm("Update", "Application", FormMethod.Post, new { @class = "form-horizontal well" }))
{
    <legend>@Model.GetLabel("LegendText")</legend>
    <div class="control-group">
        <label class="control-label" for="NameInput">@Model.GetLabel("OrganisationNameLabel")</label>
        <div class="controls">
            <input class="input-xlarge" id="NameInput" name="NameInput" type="text" placeholder="@Model.GetLabel("OrganisationNamePlaceholder")">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="PasswordInput">@Model.GetLabel("PasswordLabel")</label>
        <div class="controls">
            <input class="input-xlarge" id="PasswordInput" name="PasswordInput" type="password"  placeholder="@Model.GetLabel("PasswordPlaceholder")">
            <button type="submit" class="btn" id="SubmitLogin">@Model.GetLabel("SubmitButtonText")</button>
        </div>
    </div>
